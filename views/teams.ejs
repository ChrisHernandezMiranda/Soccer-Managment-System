<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags for character set and viewport -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title of the page -->
    <title>Teams</title>
    <!-- Linking to external CSS file -->
    <link rel="stylesheet" type="text/css" href="teams.css">
</head>
<body>
    <!-- Sidebar section -->
    <div class="sidebar">
        <!-- Sidebar navigation links -->
        <div><a href="/">Home</a></div>
        <div><a href="/teams">Teams</a></div>
    </div>

    <!-- Header section -->
    <div class="header">
        <!-- Heading for the page -->
        <h1>Soccer Management System</h1>
    </div>
    
    <!-- Main content section -->
    <div class="main-content">
        <!-- Title for the Teams view -->
        <h2>Teams</h2>
        <!-- Table to display team information -->
        <table id="teamTable">
            <thead>
                <tr>
                    <!-- Table headers -->
                    <th>Team Logo</th>
                    <th>Team Name</th>
                    <th>Season</th> 
                    <th>Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through teams data and display in table rows -->
                <% teams.forEach(team => { %>
                    <tr>
                        <!-- Team logo column -->
                        <td><img src="<%= team.logoUrl %>" alt="<%= team.name %> Logo" class="team-logo"></td>
                        <!-- Team name column -->
                        <td><%= team.name %></td>
                        <!-- Season column -->
                        <td><%= team.season %></td> 
                        <!-- Year column -->
                        <td><%= team.year %></td>
                        <!-- Actions column with edit and delete buttons -->
                        <td>
                            <a href="/editTeam/<%= team._id %>" class="edit-button">Edit</a>
                            <!-- Delete button with confirmation prompt -->
                            <a href="/deleteTeam/<%= team._id %>" onclick="return confirm('Are you sure you want to delete this team?')" class="delete-button">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <!-- Link to add new team -->
        <a href="/addTeam" class="add-button">Add Team</a>
    </div>
</body>
</html>
